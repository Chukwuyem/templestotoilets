{
	"name": "Temples to Toilets",
	"manifest_version": 2,
	"version": "1.1.0",

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"content_scripts": [{
		"matches": [ "<all_urls>" ],
		"run_at": "document_end",
		"all_frames": true,
		"js": ["content.js"]
	}],

	"permissions": ["tabs"],

	"icons": {
		"16": "icons/templetoilet-sqr-16.png",
		"48": "icons/templetoilet-sqr-48.png",
		"128": "icons/templetoilet-sqr-128.png"
  	},

  	"browser_action":{
    	"name":"Temples to Toilets",
    	"default_title": "Temples to Toilets",
    	"default_icon": {
    		"19": "icons/templetoilet-sqr-19.png",
    		"38": "icons/templetoilet-sqr-38.png"
    	}
  }
}